<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_popover"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Soundaries"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/txtFive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Five more Soundaries: "
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/rounded_button"
            android:text="$0.99"
            android:layout_gravity="end"
            android:onClick="purchaseFiveMore"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtUnlimited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unlimited Soundaries:  "
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/rounded_button"
            android:text="$1.99"
            android:onClick="purchaseUnlimited"
            android:layout_gravity="end"
            />

    </LinearLayout>


</LinearLayout>