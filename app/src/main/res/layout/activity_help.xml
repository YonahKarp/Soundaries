                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtHelp2_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtHelp2_7"
                android:layout_below="@+id/txtHelp2_7"
                android:text="@string/help2_8"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtHelp2_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtHelp2_8"
                android:layout_below="@+id/txtHelp2_8"
                android:text="@string/help2_9"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtHelp2_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtHelp2_9"
                android:layout_below="@+id/txtHelp2_9"
                android:text="@string/help2_10"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtHelp2_10"
                android:layout_below="@+id/txtHelp2_10"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="@string/helpLuck"
                android:textSize="18sp" />
        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
