                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtHelp2_5"
                android:layout_below="@+id/txtHelp2_5"
                android:layout_marginTop="8dp"
                android:text="@string/help2_6"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtHelp2_7"
